<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    cardview:cardCornerRadius="2dp"
    cardview:cardElevation="3dp"
    cardview:cardUseCompatPadding="true">


    <ImageView
        android:id="@+id/image"
        android:layout_width="80dp"
        android:visibility="gone"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:scaleType="centerCrop"
        cardview:srcCompat="@drawable/person" />


    <LinearLayout
        android:padding="5dp"
        android:background="@drawable/background_list"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--job_no-->
        <TextView
            android:id="@+id/txtJobNo"
            android:textSize="16sp"
            android:text="รหัสงาน"
            android:textColor="@color/colorBack"
            android:textStyle=""
            android:layout_weight="1.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <!--cus_name-->
        <TextView
            android:id="@+id/txtCusName"
            android:textSize="16sp"
            android:text="ชื่อลูกค้า"
            android:textColor="@color/colorBack"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <!--job_event-->
        <TextView
            android:id="@+id/txtJobEvent"
            android:textSize="16sp"
            android:textColor="@color/colorBack"
            android:text="สถานะงาน"
            android:layout_weight="1.6"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <!--job_event-->
        <TextView
            android:id="@+id/txtMarketing"
            android:text="เจ้าหน้าที่การตลาด"
            android:textSize="16sp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

        <!--Loanofficer1,2,3-->
        <TextView
            android:id="@+id/txtLoan"
            android:textSize="16sp"
            android:text="เจ้าหน้าที่สินเชื่อ"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--Loanofficer1,2,3-->
        <TextView
            android:id="@+id/txtValuer"
            android:textSize="16sp"
            android:text="เจ้าหน้าที่สินเชื่อ"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--<ImageView-->
        <!--android:id="@+id/txtPhone"-->
        <!--android:textSize="16sp"-->
        <!--android:visibility="gone"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->

        <TextView
            android:id="@+id/txtPhone"
            android:textSize="16sp"
            android:text="เบอร์โทรศัพท์มือถือ"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtEmail"
            android:textSize="16sp"
            android:text="อีเมล์"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtTidto"
            android:textSize="16sp"
            android:text="ติดต่อภายใน"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
