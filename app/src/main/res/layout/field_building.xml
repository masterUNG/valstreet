<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:background="#eceff1"
android:layout_height="50dp"
android:orientation="horizontal">

<!--แปลงที่-->
<EditText
    android:id="@+id/editT12"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="0.2"
    android:hint="ประเภท\nใช้งาน"
    android:inputType="number"
    android:textAlignment="center"
    android:textColorHint="@color/edit_textok"
    android:textSize="@dimen/size_main" />

<!--เอกสารสิทธิ์-->
<EditText
    android:id="@+id/editT13"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="3.5"
    android:hint="โครงสร้าง\n\n"
    android:inputType="text"
    android:textAlignment="center"
    android:textColorHint="@color/edit_textok"
    android:textSize="@dimen/size_main" />

<!--เลขที่-->
<EditText
    android:id="@+id/editT14"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="2.2"
    android:hint="จำนวน\nชั้น"
    android:inputType="text"
    android:textAlignment="center"
    android:textColorHint="@color/edit_textok"
    android:textSize="@dimen/size_main" />

<!--เนื้อที่-->
<EditText
    android:id="@+id/editT15"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:hint="อายุ\nอาคาร"
    android:inputType="text"
    android:textAlignment="center"
    android:textColorHint="@color/edit_textok"
    android:textSize="@dimen/size_main" />

<!--เนื้อที่-->
<EditText
    android:id="@+id/editT16"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:hint="เนื้อที่\nใช้สอย"
    android:inputType="text"
    android:textAlignment="center"
    android:textColorHint="@color/edit_textok"
    android:textSize="@dimen/size_main" />

<Button
    android:id="@+id/delete_button"
    android:layout_width="0dp"
    android:layout_height="40dp"
    android:layout_weight="1"
    android:background="@mipmap/minus"
    android:onClick="Delete1" />
</LinearLayout>






